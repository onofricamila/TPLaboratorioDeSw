<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="1"
        android:entries="@array/pref_visualizacion_titles"
        android:entryValues="@array/pref_visualizacion_values"
        android:key="visualizacion"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_visualizacion" />

    <!-- This preference simply launches an intent when selected. Use this UI sparingly, per
         design guidelines. -->

    <CheckBoxPreference
        android:defaultValue="1"
        android:key="juego"
        android:title="@string/pref_title_juego" />
    <CheckBoxPreference
        android:defaultValue="1"
        android:key="juego2"
        android:title="@string/pref_title_juego2" />
    <CheckBoxPreference
        android:defaultValue="1"
        android:key="juego3"
        android:title="@string/pref_title_juego3" />

</PreferenceScreen>
