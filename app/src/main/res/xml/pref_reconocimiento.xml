<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="@string/pref_default_visualizacion"
        android:entries="@array/pref_visualizacion_titles"
        android:entryValues="@array/pref_visualizacion_values"
        android:key="visualizacion"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_visualizacion" />

    <!-- This preference simply launches an intent when selected. Use this UI sparingly, per
         design guidelines. -->

    <CheckBoxPreference
        android:defaultValue="@bool/pref_default_RP"
        android:key="RP"
        android:title="@string/pref_title_RP" />
    <CheckBoxPreference
        android:defaultValue="@bool/pref_default_RPJ"
        android:key="RPJ"
        android:title="@string/pref_title_RPJ" />

</PreferenceScreen>
